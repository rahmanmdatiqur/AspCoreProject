@model IEnumerable<Auth_Cls.Models.Patient>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Patient Information</h1>

<p>
    @Html.ActionLink(" Create New", "Create")
</p>

@foreach (var item in Model)
{
    <div class="card "> 
       
        <div class="card-header d-flex justify-content-between ">
           
            <div>
               
                <div>
                    <img src="@item.Picture" width="45" class="mr-2" />
                </div>
                <div>
                    <b>Name:</b> @item.PatientName
                </div>
                <div>
                    <b>Date:</b>  @item.BirthDate.ToString("yyyy-MM-dd")
                </div>
                <div>
                    <b>Phone:</b>  @item.Phone
                </div>

                <div>
                    <b>Marital Status:</b>  @(item.MaritialStatus == true ? "Married" : "Single")
                </div>
                          
            </div>
            <div>

                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Patients" asp-route-id="@item.PatientId">Edit</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Patients" asp-route-id="@item.PatientId">Delete</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                        <th>DiseseId</th>
                        <th>DiseseName</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var singleEntry in item.TestEntries)
                    {
                        <tr>
                            <td>@singleEntry.DiseseId</td>
                            <td>@singleEntry.Disese.DiseseName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
